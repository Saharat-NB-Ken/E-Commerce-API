{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "types": [
      "node",
      "express",
      "express-session"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "noImplicitAny": true,
  },
  "include": [
    "src/**/*",
    "src/types/**/*"
  ]
}